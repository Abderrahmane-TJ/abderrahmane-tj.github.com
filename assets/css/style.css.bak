/*
    the content section
*/


#content_wrapper{
  margin-left: 300px;
  background: white;
  width: 680px;
  margin-top: 20px;
  margin-bottom: 20px;
  position: relative;
}
#content{
  /*padding-top: 112px;*/

}

#content_wrapper.reading{
  box-shadow: #333 0px 0px 10px;
}

.reading #content{
    padding: 10px;
}

#head-article{
    height: 30px;
    background-color: #0D0D0D;
    background-image: -webkit-gradient(linear,left top,left bottom,from(#333333),to(#0D0D0D));
    background-image: -moz-linear-gradient(top,#0D0D0D,#333333);
    color: white;
    display: none;
    border: 1px solid #000;
    border-bottom: 0px;
}
#head-title{
    font-size: 15px;
    padding: 5px 0px 0px 10px;
    font-family: verdana;
    text-shadow: 0px -1px 0px #0D0D0D;
}
#close-article{
  width: 20px;
  height: 20px;
  background: #0D0D0D;
  box-shadow: inset 0px 1px 2px #000;
  background-image: -webkit-gradient(linear,left top,left bottom,from(#0D0D0D),to(#232323));
  text-shadow: 0px 2px 1px black;
  position: absolute;
  right: 5px;
  top: 5px;
  color: white;
  font-size: 20px;
  padding-left: 8px;
  padding-top: 5px;
  /*box-shadow: 0px 0px 4px #0d0d0d;*/
  /*text-shadow: 0px 0px 4px #0d0d0d;*/
  cursor: pointer;

}
#fixed_close_article{
  position: fixed;
    top: 0px;
    right: 40px;
    width: 20px;
    height: 20px;
    background: #0D0D0D;
    color: white;
    font-size: 20px;
    padding-left: 8px;
    padding-top: 5px;
    box-shadow: 0px 0px 4px #0d0d0d;
    text-shadow: 0px 0px 4px #0D0D0D;
    cursor: pointer;
    display: none;
    z-index: 10;
}

#fixed_top_article{
  position: fixed;
    top: 0px;
    right: 5px;
    width: 20px;
    height: 20px;
    background: #0D0D0D;
    color: white;
    font-size: 20px;
    padding-left: 8px;
    padding-top: 5px;
    box-shadow: 0px 0px 4px #0d0d0d;
    text-shadow: 0px 0px 4px #0D0D0D;
    cursor: pointer;
    display: none;
    z-index: 10;
}

.card{
  float: left;
  margin: 10px 0px 0px 10px;
  width: 300px;
  height: 400px;

  background: #333;


  border-style: solid;
  border-width: 10px;
  border-color: #0D0D0D;
  text-shadow: 0px 2px 2px #0D0D0D;

  position: relative;

  cursor: pointer;
}

.reading article{
  float: none;
  margin: 0px;
  width: inherit;
  height: inherit;

  background: inherit;


  border-style: none;
  border-width: 0px;

  text-shadow: none;
  position: relative;

  cursor: default;
}



